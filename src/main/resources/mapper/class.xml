<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="class">
    <select id="list" parameterType="com.test.gongbang.shared.service.Paging" resultType="com.test.gongbang.sclass.service.ClassDTO"> select * from (select rownum as rnum, c.* from (select * from tblClass order by seq desc) c) where rnum between #{startRow} and #{endRow} order by rnum asc</select>
    <select id="totalcount" resultType="int"> select count(*) from tblClass </select>
    <select id="classviewdetails" parameterType="String" resultType="com.test.gongbang.sclass.service.ClassDTO"> select * from tblClass where seq = #{seq} </select>
    <select id="shop" parameterType="String" resultType="com.test.gongbang.shop.service.ShopDTO"> select * from tblShop where seq = (select sseq from tblClass where seq = #{cseq}) </select>
</mapper>